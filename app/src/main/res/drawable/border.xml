<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Gray shadow. -->
            <item
                android:left="3dp"
                android:top="5dp">
                <shape>
                    <solid android:color="@android:color/darker_gray" />
                    <corners android:radius="15dp" />
                </shape>
            </item>

            <!-- White foreground.  -->
            <item
                android:bottom="5dp"
                android:right="3dp">
                <shape>

                    <corners android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>